@model IEnumerable<SignBoards.Models.SignBoard>

@{
    ViewBag.Title = "MySignBoards";
}

<h2>MySignBoards</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SignBoardAddress.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FittingInstructions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FittingCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FittingTypeId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignBoardAddress.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FittingInstructions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FittingCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FittingTypeId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
